{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    // "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}